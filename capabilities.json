{
    "$schema": "https://lq.litdevs.org/capability.schema.json",
    "client": {
        "name": "Quarklight",
        "author": "Amy",
        "version": "0.2.6",
        "repository": "https://github.com/vtheskeleton/quarklight",
        "url": "https://quarklight.tech"
    },
    "features": {
        "full": [
            "general.opensource",
            "general.authentication",
            "general.gateway",
            "general.deeplink",
            "general.notifications",
            "general.networks",
            "quarks.create",
            "quarks.list",
            "quarks.view",
            "quarks.invite",
            "quarks.join",
            "quarks.leave",
            "channels.list",
            "channels.create",
            "channels.delete",
            "channels.edit",
            "channels.view",
            "channels.history",
            "messages.read",
            "messages.send",
            "messages.edit",
            "messages.delete",
            "messages.botMessage",
            "messages.attachments",
            "users.me",
            "users.avatars",
            "users.avatar",
            "users.nickname",
            "quarks.delete",
            [
                {
                    "name": "Cat Mode",
                    "description": "Turn into a cat. nya :3"
                }
            ]
        ],
        "partial": [
            {
                "feature": "quarks.order",
                "reason": "Order is respected, updates or editing are not supported"
            },
            {
                "feature": "messages.me",
                "reason": "/me messages are displayed, but cannot be sent"
            },
            {
                "feature": "quarks.edit",
                "reason": "Event handled, editing not supported."
            }
        ],
        "unsupported": [
            "quarks.icon"
        ]
    }
}